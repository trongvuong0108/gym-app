<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_feedback_white"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Gửi phản hồi của bạn"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/bg_feedback_yellow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/editTextFeedBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Phản hồi"
            android:background="@drawable/bg_feedback_corner_border"
            android:padding="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/btn_no_thanks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Không, cám ơn"
                android:layout_marginEnd="10dp"
                android:alpha="0.6"
                android:textSize="14sp"
                android:background="@drawable/bg_feedback_button_grey"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gửi"
                android:textSize="14sp"
                android:background="@drawable/bg_feedback_button_yellow"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>